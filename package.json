{
    "name": "blheli-configurator",
    "description": "Cross-platform configuration tool for BLHeli-based electronic speed controllers",
    "version": "1.1.0",
    "main": "main.html",
    "default_locale": "en",
    "window": {
        "title": "BLHeli - Configurator",
        "icon": "images/icon_128.png",
        "toolbar": true,
        "width": 1280,
        "height": 800
    },
    "repository": {
        "type": "git",
        "url": "github.com/blheli-configurator/blheli-configurator"
    },
    "author": "DieHertz",
    "license": "GPL-3.0",
    "dependencies": {
    },
    "devDependencies": {
        "babel-cli": "6.5.1",
        "babel-preset-es2015": "6.5.0",
        "babel-preset-react": "6.5.0",
        "babel-plugin-syntax-async-functions": "^6.1.4",
        "babel-plugin-transform-regenerator": "^6.1.4",
        "babel-polyfill": "6.13.0", 
        "i18next": "3.4.1",
        "react-i18next": "1.8.0",
        "react-switchery": "1.0.0",
        "archiver": "^2.0.3",
        "del": "^3.0.0",
        "gulp": "~3.9.1",
        "gulp-concat": "~2.6.1",
        "gulp-install": "^1.1.0",
        "inflection": "1.12.0",
        "jquery-ui-npm": "1.12.0",
        "nw-builder": "^3.4.1",
        "os": "^0.1.1",
        "platform-dependent-modules": "0.0.14",
        "run-sequence": "^2.2.0",
        "temp": "^0.8.3"
    },
    "scripts": {
        "build": "babel tabs/esc.jsx -o js/build/esc.js && babel jsx --out-dir js/build",
        "start": "node node_modules/gulp/bin/gulp.js debug",
        "_postinstall": "node ./node_modules/platform-dependent-modules/cli.js",
        "postinstall": "npm run _postinstall",
        "gulp": "gulp"
    },
    "config": {
        "platformDependentModules": {
            "darwin": [
                "gulp-appdmg@1.0.3"
            ]
        }
    }
}
